<datasources>

	<local-tx-datasource>
      <jndi-name>${work.ds.jndi.name}</jndi-name>      
      <driver-class>${db.driver}</driver-class>
      <connection-url>${db.url};port=${sqlserver.port};instanceName=${sqlserver.instanceName};DatabaseName=${db.project.work.databasename}</connection-url>
      <user-name>${db.project.work.username}</user-name>
      <password>${db.project.work.password}</password>
      <metadata>
        <type-mapping>MS SQLSERVER2000</type-mapping>
      </metadata>
    </local-tx-datasource>
 
</datasources>